<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#646565"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_sms"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:onClick="sendSMS"
        android:text="@string/btn_sms"
        android:textSize="30sp"
        app:backgroundTint="#DF0E0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_phone"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="mkCall"
        android:text="@string/btn_phone"
        android:textSize="30sp"
        app:backgroundTint="#DF0E0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_web"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:onClick="openWeb"
        android:text="@string/btn_web"
        android:textSize="30sp"
        app:backgroundTint="#DF0E0E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sms" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:onClick="openMap"
        android:text="@string/btn_map"
        android:textSize="30sp"
        app:backgroundTint="#DF0E0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_phone" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="92dp"
        android:onClick="shareText"
        android:text="@string/btn_share"
        android:textSize="30sp"
        app:backgroundTint="#DF0E0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_act"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:onClick="openNewAct"
        android:text="@string/btn_act"
        android:textSize="30sp"
        app:backgroundTint="#DF0E0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_share" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="915dp"
        android:layout_height="78dp"
        android:layout_marginBottom="28dp"
        android:background="#000000"
        android:gravity="center"
        android:text="@string/text_creator"
        android:textColor="#B3B2B2"
        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>